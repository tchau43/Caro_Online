<Window x:Class="Caro_Online.MainScene"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Caro_Online"
        mc:Ignorable="d"
        Title="Caro" Height="700" Width="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition ></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom">
                <TextBlock HorizontalAlignment="Center" Text="Wellcome" FontSize="50"></TextBlock>
                <TextBlock HorizontalAlignment="Center" Text="Choose your game" FontSize="30"></TextBlock>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <StackPanel VerticalAlignment="Center">
                <Button Margin="0 0 0 10" HorizontalAlignment="Center" Height="50" Width="100" Content="Play Caro" Click="Button_Click"></Button>
                <Button HorizontalAlignment="Center" Height="50" Width="100" Content="Play Chinese Chess" Click="Button_Click_1"></Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
